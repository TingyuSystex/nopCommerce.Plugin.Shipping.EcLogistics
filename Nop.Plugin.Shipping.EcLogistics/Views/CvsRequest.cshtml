@model Nop.Plugin.Shipping.EcLogistics.Models.CvsMapModel;

<script>
    function getStore() {
        var result = null;
        var data = {
            cvsSubType: "@Model.CvsSubType"
        };

        $.ajax({
            cache: false,
            type: "POST",
            data: data,
            url: "@Html.Raw(Url.Action("GetCvs", "EcLogistics"))",
            async: false,
            success: function (data) {
                if (data) {
                    result = data.mapUrl;
                    OpenWindow(result, 800, 800, true);
                } else {
                    display_nop_error(data);
                }
            }
        });
    }
</script>

